         title        = "Bivariate gamma mixture of experts models for joint insurance claims modelling",
         author       = personList(as.person("Sen Hu"),
                                   as.person("T. Brendan. Murphy"),
                                   as.person("Adrian O'Hagan")),
         journal      = "To appear",
         year         = "2019",
