         archiveprefix= "arXiv",
         eprint       = "1904.04699",
         primaryclass = "stat.AP",

         textVersion  =
           paste("Hu, S., Murphy, T.B., and O'Hagan, A. (2019).",
                 "Bivariate gamma mixture of experts models for joint insurance claims modelling.",
                 "To appear.",
                 "https://arxiv.org/abs/1904.04699")
)

